    <%= form.text_field :measurement_unit, class:"form-control", placeholder:"Measurement Unit" %>
  </div>
  <br />
  <div class="form-group">
    <%= form.text_field :price, class:"form-control", placeholder:"Price" %>
  </div>
  <br />
  <div class="form-group">
    <%= form.text_field :quantity, class:"form-control", placeholder:"Quantity" %>
  </div>
  <br />
  <div class="form-group">
    <%= form.number_field :user_id, id: :food_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>
  <br />
  <div>
    <%= form.submit class:"btn btn-secondary" %>
  </div>
